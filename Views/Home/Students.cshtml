@model IEnumerable<MVC_multipleClass.Models.Student>

<p>
    <a asp-action="AddStudents">Add Students</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Subject
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                 @item.SId
            </td>
            <td>

                <a asp-controller="Home" asp-action="EditStudents"  class="btn btn-danger" asp-route-id="@item.Id">Edit</a>
                <a asp-controller="Home" asp-action="DeleteStudents"  class="btn btn-danger" asp-route-id="@item.Id">Delete </a>
                
            </td>
        </tr>
}
    </tbody>
</table>
